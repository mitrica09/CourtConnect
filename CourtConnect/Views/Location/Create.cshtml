@model CourtConnect.ViewModel.Location.LocationViewModel

@{
    ViewData["Title"] = "Adaugă Locatie";
}

<h1 class="page-title">Creează o locație nouă</h1>


<div class="form-wrapper">
    <div class="form-card">
        <h2>Adaugă locație</h2>

        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CityName"></label>
                <input asp-for="CityName" class="form-control" placeholder="Introdu numele orașului" />
                <span asp-validation-for="CityName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CountyName"></label>
                <input asp-for="CountyName" class="form-control" placeholder="Introdu numele țării" />
                <span asp-validation-for="CountyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StreetName"></label>
                <input asp-for="StreetName" class="form-control" placeholder="Introdu numele străzii" />
                <span asp-validation-for="StreetName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StreetNumber"></label>
                <input asp-for="StreetNumber" class="form-control" placeholder="Introdu numarul străzii" />
                <span asp-validation-for="StreetNumber" class="text-danger"></span>
            </div>

            <div class="btn-container">
                <button type="submit" class="btn-primary">Adaugă</button>
                <a asp-action="Index" class="btn-secondary">Înapoi la listă</a>
            </div>
        </form>
    </div>
</div>

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
