<link href="~/css/admin/general_pages.css" rel="stylesheet" />
<link href="~/css/Admin/IndexAdmin.css" rel="stylesheet" />

@model IEnumerable<CourtConnect.ViewModel.Location.LocationForDisplayViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="admin-wrapper">
    <h1 class="admin-title">Locatiile mele</h1>

    <div class="admin-header">
        <a asp-action="Create" class="admin-add-btn">➕ Adaugă o locatie noua</a>
    </div>

    <div class="admin-table-container">
        <table class="admin-table">
            <thead>
                <tr>
                    <th>Denumire oras</th>
                    <th>Denumire judet</th>
                    <th>Denumire strada</th>
                    <th>Numar</th>
                    <th class="actions-header">Acțiuni</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.CityName)</td>
                        <td>@Html.DisplayFor(modelItem => item.CountyName)</td>
                        <td>@Html.DisplayFor(modelItem => item.StreetName)</td>
                        <td>@Html.DisplayFor(modelItem => item.StreetNumber)</td>
                        <td class="admin-actions">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="admin-edit btn-primary">
                                ✏️ Edit
                            </a>
                            <form asp-action="Delete" method="post" class="admin-delete-form">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="admin-delete btn-danger">
                                    🗑️ Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
