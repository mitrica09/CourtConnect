@model CourtConnect.ViewModel.Location.LocationViewModel

@{
    ViewData["Title"] = "Editează o locație";
}

<h1 class="page-title">Editează locația selectată</h1>

<div class="form-wrapper">
    <div class="form-card">
        <h2>Editează locația</h2>

        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CityName" class="form-label">Oraș</label>
                <input asp-for="CityName" class="form-control" placeholder="Introdu numele orașului" />
                <span asp-validation-for="CityName" class="text-danger d-block"></span>
            </div>

            <div class="form-group">
                <label asp-for="CountyName" class="form-label">Județ</label>
                <input asp-for="CountyName" class="form-control" placeholder="Introdu numele județului" />
                <span asp-validation-for="CountyName" class="text-danger d-block"></span>
            </div>

            <div class="form-group">
                <label asp-for="StreetName" class="form-label">Stradă</label>
                <input asp-for="StreetName" class="form-control" placeholder="Introdu numele străzii" />
                <span asp-validation-for="StreetName" class="text-danger d-block"></span>
            </div>

            <!-- Street Number Field -->
            <div class="form-group">
                <label asp-for="StreetNumber" class="form-label">Număr</label>
                <input asp-for="StreetNumber" class="form-control" placeholder="Introdu numărul străzii" />
                <span asp-validation-for="StreetNumber" class="text-danger d-block"></span>
            </div>

            <!-- Submit and Back Buttons -->
            <div class="btn-container">
                <button type="submit" class="btn-primary">✏️ Editează</button>
                <a asp-action="Index" class="btn-secondary">Înapoi la listă</a>
            </div>
        </form>
    </div>
</div>

