@model CourtConnect.ViewModel.Match.MatchDetailsViewModel
@{
    ViewData["Title"] = "Detalii Meci";
}

<link href="~/css/match/details.css" rel="stylesheet" />

<div class="match-details-container">
    <h2>Detalii Meci</h2>

    <div class="players">
        <div class="player">
            <h4>@Model.PlayerOneFullName</h4>
        </div>
        <div class="vs">vs</div>
        <div class="player">
            <h4>@Model.PlayerTwoFullName</h4>
        </div>
    </div>

    <p><strong>Data:</strong> @Model.StartDate.ToString("dd MMM yyyy, HH:mm")</p>
    <p><strong>Status:</strong> @Model.Status</p>

    @if (!string.IsNullOrEmpty(Model.ResultDescription))
    {
        <p><strong>Rezultat:</strong> @Model.ResultDescription</p>
    }

    @if (Model.SetScores != null && Model.SetScores.Any())
    {
        <h4>Scor pe seturi:</h4>
        <ul>
            @foreach (var set in Model.SetScores)
            {
                <li>@set</li>
            }
        </ul>
    }

    <a href="@Url.Action("Index", "Match")" class="btn btn-primary mt-3">Înapoi la meciuri</a>
</div>


