@model CourtConnect.ViewModel.Account.ProfileViewModel

<link href="~/css/account/profile.css" rel="stylesheet" />

<div class="profile-container">
    <h1>@Model.FullName</h1>

    <img src="~/images/@Model.ImageUrl" asp-append-version="true" alt="User avatar" class="profile-avatar">

    <!-- Progress Bar -->
    <div class="progress-bar-container">
        <div class="progress-bar" style="width: @Model.Progress%"></div>
        <div class="progress-text">@Model.PointsToNextLevel</div>
    </div>

    <form class="profile-form">
        <div class="form-group">
            <label for="fullName">Full Name</label>
            <input type="text" id="fullName" value="@Model.FullName" readonly>
        </div>

        <div class="form-group">
            <label for="level">Level</label>
            <input type="text" id="level" value="@Model.Level" readonly>
        </div>

        <div class="form-group">
            <label for="club">Club</label>
            <input type="text" id="club" value="@Model.Club" readonly>
        </div>

        <div class="form-group">
            <label for="rank">Rank</label>
            <input type="text" id="rank" value="@Model.Rank" readonly>
        </div>

        <div class="form-group">
            <label for="points">Points</label>
            <input type="text" id="points" value="@Model.Points" readonly>
        </div>

    </form>
</div>
